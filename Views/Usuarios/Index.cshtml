<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

@model IEnumerable<Inmobiliaria.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
    int pagina = ViewBag.Pagina ?? 1;
    int totalPaginas = ViewBag.TotalPaginas ?? 1;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h1>
    Usuarios
    <div class="btn-group pull-right">
        <a class="btn btn-primary" asp-action="Create" title="Crear">
            <i class="bi bi-person-plus-fill"></i> Nuevo
        </a>
    </div>
</h1>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Avatar</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.Nombre</td>
                <td>@u.Apellido</td>
                <td>
                    <img src="@u.Avatar" alt="Avatar" class="img-thumbnail" style="width:50px; height:50px;" />
                </td>
                <td>@u.Email</td>
                <td>@u.Rol</td>
                <td>
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-warning btn-sm" title="Editar">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-danger btn-sm" title="Eliminar">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

