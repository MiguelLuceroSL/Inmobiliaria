<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

@model IEnumerable<Inmobiliaria.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
    int pagina = ViewBag.Pagina ?? 1;
    int totalPaginas = ViewBag.TotalPaginas ?? 1;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<div class="d-flex justify-content-between align-items-center mb-3">
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("Admin"))
        {
            <h1>Usuarios</h1>
            <div class="btn-group pull-right">
                <a class="btn btn-primary" asp-action="Create" title="Crear">
                    <i class="bi bi-person-plus-fill"></i> Nuevo
                </a>
            </div>
        }
        else if (User.IsInRole("Empleado"))
        {
            <h1>Mi Perfil</h1>
        }
    }

</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr class="table-dark text-center">
            <th>Legajo</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Avatar</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr class="text-center align-middle">
                <td>@u.Id</td>
                <td>@u.Nombre</td>
                <td>@u.Apellido</td>
                <td>
                    <img src="@(string.IsNullOrEmpty(u.Avatar) ? Url.Content("~/images/AvatarDefault.png") : u.Avatar)" alt="Avatar" class="rounded-circle" style="width:30px; height:30px; object-fit:cover;" />
                </td>
                <td>@u.Email</td>
                <td>@u.Rol</td>
                <td>
                    <div class="d-flex flex-wrap gap-2 justify-content-center align-items-center">
                        <a asp-action="Edit" asp-route-id="@u.Id" class="btn btn-warning btn-sm" title="Editar">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@u.Id" class="btn btn-danger btn-sm" title="Eliminar">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>