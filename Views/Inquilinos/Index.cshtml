@model IEnumerable<Inmobiliaria.Models.Inquilino>

@{
    ViewData["Title"] = "Inquilinos";
    int pagina = ViewBag.Pagina ?? 1;
    int totalPaginas = ViewBag.TotalPaginas ?? 1;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h1>
    Inquilinos
    <div class="btn-group pull-right">
        <a class="btn btn-primary" asp-action="Create" title="Crear">
            <i class="fa-solid fa-plus"><h4>+</h4></i>
        </a>
    </div>
</h1>

<table border="4" cellpadding="5" class="table table-striped">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>TelÃ©fono</th>
            <th>Email</th>
            <th>Domicilio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.dniInquilino</td>
                <td>@i.apellido</td>
                <td>@i.nombre</td>
                <td>@i.telefono</td>
                <td>@i.email</td>
                <td>@i.domicilioPersonal</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@i.idInquilino" class="btn btn-warning">Editar</a>|
                    <a asp-action="Delete" asp-route-id="@i.idInquilino" class="btn btn-danger">Eliminar</a>
                    @* <a asp-action="Details" asp-route-id="@i.idInquilino" class="btn btn-primary">Detalles</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>

