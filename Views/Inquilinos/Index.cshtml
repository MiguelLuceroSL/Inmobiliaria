<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

@model IEnumerable<Inmobiliaria.Models.Inquilino>

@{
    ViewData["Title"] = "Inquilinos";
    int pagina = ViewBag.Pagina ?? 1;
    int totalPaginas = ViewBag.TotalPaginas ?? 1;
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h1>
    Inquilinos
    <div class="btn-group pull-right">
        <a class="btn btn-primary" asp-action="Create" title="Crear">
            <i class="fa-solid fa-plus"><h4>+</h4></i>
        </a>
    </div>
</h1>

<table border="4" cellpadding="5" class="table table-striped">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Apellido</th>
            <th>Nombre</th>
            <th>TelÃ©fono</th>
            <th>Email</th>
            <th>Domicilio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.dniInquilino</td>
                <td>@i.apellido</td>
                <td>@i.nombre</td>
                <td>@i.telefono</td>
                <td>@i.email</td>
                <td>@i.domicilioPersonal</td>
                <td>
                        <div class="d-flex flex-wrap gap-2">
                            <a asp-action="Edit" asp-route-id="@i.idInquilino" class="btn btn-warning btn-sm" title="Editar">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@i.idInquilino" class="btn btn-danger btn-sm" title="Eliminar">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- ðŸ”„ PaginaciÃ³n -->
<nav aria-label="PaginaciÃ³n de inquilinos">
    <ul class="pagination justify-content-left">
        <li class="page-item @(pagina <= 1 ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pagina="@(pagina - 1)">Â« Anterior</a>
        </li>

        @for (int i = 1; i <= totalPaginas; i++)
        {
            <li class="page-item @(i == pagina ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-pagina="@i">@i</a>
            </li>
        }

        <li class="page-item @(pagina >= totalPaginas ? "disabled" : "")">
            <a class="page-link" asp-action="Index" asp-route-pagina="@(pagina + 1)">Siguiente Â»</a>
        </li>
    </ul>
</nav>
