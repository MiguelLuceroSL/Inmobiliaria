
@model Inmobiliaria.Models.Inquilino

@{
    ViewData["Title"] = "Nuevo Inquilino";
}

<!-- Estilo para capitalizar la primera letra de las etiquetas -->
<style>
    label.form-label {
        text-transform: capitalize;
    }
</style>

<h2 class="mb-4">Nuevo Inquilino</h2>


<form asp-action="Create" method="post">
    <div class="mb-3">
        <label for="dniInquilino" class="form-label">DNI</label>
        @* <label asp-for="dniInquilino" class="form-label"></label> *@
        <input asp-for="dniInquilino" class="form-control" />
        <span asp-validation-for="dniInquilino" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="apellido" class="form-label"></label>
        <input asp-for="apellido" class="form-control" />
        <span asp-validation-for="apellido" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="nombre" class="form-label"></label>
        <input asp-for="nombre" class="form-control" />
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="telefono" class="form-label"></label>
        <input asp-for="telefono" class="form-control" />
        <span asp-validation-for="telefono" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="email" class="form-label"></label>
        <input asp-for="email" class="form-control" />
        <span asp-validation-for="email" class="text-danger"></span>
    </div>

    <div class="mb-3">
    <label for="domicilioPersonal" class="form-label">Domicilio personal</label>
    <input asp-for="domicilioPersonal" class="form-control" />
    <span asp-validation-for="domicilioPersonal" class="text-danger"></span>
</div>

    <button type="submit" class="btn btn-success">Guardar</button>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}