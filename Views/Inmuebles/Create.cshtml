@model Inmobiliaria.Models.Inmueble

@{
    ViewData["Title"] = "Nuevo Inmueble";
}

<style>
    label.form-label {
        text-transform: capitalize;
    }
</style>

<h2 class="mb-4">Nuevo Inmueble</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="direccion" class="form-label"></label>
        <input asp-for="direccion" class="form-control" />
        <span asp-validation-for="direccion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="tipo" class="form-label"></label>
        <input asp-for="tipo" class="form-control" />
        <span asp-validation-for="tipo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="superficie" class="form-label"></label>
        <input asp-for="superficie" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="superficie" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ambientes" class="form-label"></label>
        <input asp-for="ambientes" type="number" class="form-control" />
        <span asp-validation-for="ambientes" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="baños" class="form-label"></label>
        <input asp-for="baños" type="number" class="form-control" min="1" />
        <span asp-validation-for="baños" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="cochera" class="form-check-input" />
        <label asp-for="cochera" class="form-check-label"></label>
        <span asp-validation-for="cochera" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="estado" class="form-label"></label>
        <select asp-for="estado" class="form-select">
            <option value="">Seleccione estado</option>
            <option value="Alquilado">Alquilado</option>
            <option value="Mantenimiento">Mantenimiento</option>
            <option value="Disponible">Disponible</option>
        </select>
        <span asp-validation-for="estado" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="descripcion" class="form-label"></label>
        <textarea asp-for="descripcion" class="form-control" rows="4" placeholder="Incluir una descripción"></textarea>
        <span asp-validation-for="descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
     
            <label for="buscadorProp" class="form-label">Propietario</label>
            <input id="buscadorProp" type="text" class="form-control" placeholder="Buscar propietario: Ingrese 3 letras..." />

            <select asp-for="idPropietario" id="listaPropietarios" class="form-select mt-2">
                <option value="idPropietario" selected>
                   @* @Model.apellidoPropietario @Model.nombrePropietario (@Model.Propietario?.dniPropietario) *@
                </option>
             </select>
            <span asp-validation-for="idPropietario" class="text-danger"></span>
    </div>
  


    <button type="submit" class="btn btn-success">Guardar</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <partial name="_ValidationScriptsPartial" />
    <script>
        let offset = 0;
        const limit = 10;
        let filtro = "";

        async function buscarPropietarios(reset = false) {
            const resp = await fetch(`/Inmuebles/BuscarPropietarios?filtro=${filtro}&offset=${offset}&limit=${limit}`);
            const data = await resp.json();
            console.log("DATOS", data);

            const lista = document.getElementById("listaPropietarios");
            if (reset) lista.innerHTML = ""; // borra lista si es búsqueda nueva

            data.forEach(p => {
                const opt = document.createElement("option");
                opt.value = p.idPropietario;
                opt.textContent = `${p.apellido} ${p.nombre} (${p.dniPropietario})`;
                lista.appendChild(opt);
            });
        }

        document.getElementById("buscadorProp").addEventListener("input", (e) => {
            if (e.target.value.length >= 3) {
                filtro = e.target.value;
                offset = 0;
                buscarPropietarios(true);
            }
        });
    </script>
  

        
}
