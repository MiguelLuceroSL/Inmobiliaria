@model Inmobiliaria.Models.Inmueble

@{
    ViewData["Title"] = "Detalles del Inmueble";
}

<style>
    label.form-label {
        text-transform: capitalize;
        font-weight: bold;
    }

    .form-control-plaintext {
        padding-left: 0;
        font-size: 1rem;
        color: #212529;
    }
</style>

<h2 class="mb-4">Detalles del Inmueble</h2>

<div class="mb-3">
    <label class="form-label">Dirección</label>
    <p class="form-control-plaintext">@Model.direccion</p>
</div>

<div class="mb-3">
    <label class="form-label">Tipo</label>
    <p class="form-control-plaintext">@Model.tipo</p>
</div>

<div class="mb-3">
    <label class="form-label">Ambientes</label>
    <p class="form-control-plaintext">@Model.ambientes</p>
</div>

<div class="mb-3">
    <label class="form-label">Superficie</label>
    <p class="form-control-plaintext">@Model.superficie m²</p>
</div>

<div class="mb-3">
    <label class="form-label">Baños</label>
    <p class="form-control-plaintext">@Model.baños</p>
</div>

<div class="mb-3">
    <label class="form-label">Cochera</label>
    <p class="form-control-plaintext">@((Model.cochera ? "Sí" : "No"))</p>
</div>

<div class="mb-3">
    <label class="form-label">Descripción</label>
    <p class="form-control-plaintext">@Model.descripcion</p>
</div>

<div class="mb-3">
    <label class="form-label">Estado</label>
    <p class="form-control-plaintext">@Model.estado</p>
</div>

<div class="mb-3">
    <label class="form-label">Propietario</label>
    @if (Model.Propietario != null)
    {
        <p class="form-control-plaintext">
            @Model.apellidoPropietario @Model.nombrePropietario (@Model.Propietario.dniPropietario)
        </p>
    }
    else
    {
        <p class="form-control-plaintext text-muted">Sin propietario asignado</p>
    }
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.idInmueble" class="btn btn-primary me-2">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
