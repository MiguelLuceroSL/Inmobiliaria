@model Inmobiliaria.Models.Inmueble

<!-- Estilo para capitalizar la primera letra de las etiquetas -->
<style>
    label.form-label {
        text-transform: capitalize;
    }
</style>

<h2 class="mb-4">Editar Inmueble</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="idInmueble" />

    <div class="mb-3">
        <label asp-for="direccion" class="form-label"></label>
        <input asp-for="direccion" class="form-control" />
        <span asp-validation-for="direccion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="tipo" class="form-label"></label>
        <input asp-for="tipo" class="form-control" />
        <span asp-validation-for="tipo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ambientes" class="form-label"></label>
        <input asp-for="ambientes" type="number" class="form-control" />
        <span asp-validation-for="ambientes" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="superficie" class="form-label"></label>
        <input asp-for="superficie" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="superficie" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="baños" class="form-label"></label>
        <input asp-for="baños" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="baños" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="cochera" class="form-label"></label>
        <input asp-for="cochera" type="checkbox" class="form-check-input" />
        <span asp-validation-for="cochera" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="descripcion" class="form-label"></label>
        <input asp-for="descripcion" type="text" class="form-control" />
        <span asp-validation-for="descripcion" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="estado" class="form-label"></label>
        <select asp-for="estado" class="form-select">
            <option value="disponible">disponible</option>
            <option value="alquilado">alquilado</option>
            <option value="mantenimiento">mantenimiento</option>
        </select>
        <span asp-validation-for="estado" class="text-danger"></span>
    </div>

    <div class="mb-3" >
        <label for="buscadorProp" class="form-label">Propietario</label>
       
        <select asp-for="idPropietario" id="listaPropietarios" class="form-select">

            <option value="@Model.idPropietario" selected>
                @Model.apellidoPropietario @Model.nombrePropietario (@Model.Propietario?.dniPropietario)
            </option>
        </select>
        <input id="buscadorProp" type="text" class="form-control" placeholder="Buscar propietario: Ingrese 3 letras..." />

        
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        let offset = 0;
        const limit = 10;
        let filtro = "";

        async function buscarPropietarios(reset = false) {
            const resp = await fetch(`/Inmuebles/BuscarPropietarios?filtro=${filtro}&offset=${offset}&limit=${limit}`);
            const data = await resp.json();
            console.log("DATOS", data);

            const lista = document.getElementById("listaPropietarios");
            if (reset) lista.innerHTML = ""; // borra lista si es búsqueda nueva

            data.forEach(p => {
                const opt = document.createElement("option");
                opt.value = p.idPropietario;
                opt.textContent = `${p.apellido} ${p.nombre} (${p.dniPropietario})`;
                lista.appendChild(opt);
            });
        }

        document.getElementById("buscadorProp").addEventListener("input", (e) => {
            if (e.target.value.length >= 3) {
                filtro = e.target.value;
                offset = 0;
                buscarPropietarios(true);
            }
        });
    </script>
}