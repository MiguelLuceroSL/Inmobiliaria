<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Inmobiliaria</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <style>
        .navbar {
            padding-top: 1rem;
            padding-bottom: 1rem;
            font-size: 1.2rem;
        }
        .navbar-brand {
            font-size: 1.5rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            @* <a class="navbar-brand" asp-controller="Home" asp-action="Index">Inmobiliaria</a> *@
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                    aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-between" id="navbarContent">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Propietarios" asp-action="Index">Propietarios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Inquilinos" asp-action="Index">Inquilinos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Inmuebles" asp-action="Index">Inmuebles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Contratos" asp-action="Index">Contratos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Contratos" asp-action="Index">Usuarios</a>
                    </li>
                </ul>

                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-white me-3">
                                👤 @User.Identity.Name
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuarios" asp-action="Logout">Cerrar sesión</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuarios" asp-action="Login">Iniciar sesión</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
