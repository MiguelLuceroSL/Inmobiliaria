<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Inmobiliaria</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Inmobiliaria</a>
            <div>
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Propietarios" asp-action="Index">Propietarios</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Inquilinos" asp-action="Index">Inquilinos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Inmuebles" asp-action="Index">Inmuebles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Contratos" asp-action="Index">Contratos</a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-white me-3">
                                👤 @User.Identity.Name
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuarios" asp-action="Logout">Cerrar sesión</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuarios" asp-action="Login">Iniciar sesión</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-3">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>