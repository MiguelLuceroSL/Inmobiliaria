@model IEnumerable<Inmobiliaria.Models.ContratoDetalle>

<h1>Lista de Contratos</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>Fecha Desde</th>
            <th>Fecha Hasta</th>
            <th>Monto</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contrato in Model)
        {
            <tr>
                <td>@contrato.idContrato</td>
                <td>@contrato.nombreInquilino</td>
                <td>@contrato.descripcionInmueble - @contrato.direccionInmueble</td>
                <td>@contrato.fechaDesde.ToShortDateString()</td>
                <td>@contrato.fechaHasta.ToShortDateString()</td>
                <td>@contrato.monto.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@contrato.idContrato">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@contrato.idContrato">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Crear Nuevo Contrato</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
