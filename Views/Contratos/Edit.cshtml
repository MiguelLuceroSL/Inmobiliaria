@model Inmobiliaria.Models.Contrato

<h1>Editar Contrato</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="idContrato" />
    <div class="mb-3">
        <label asp-for="idInquilino" class="form-label"></label>
        <select asp-for="idInquilino" class="form-select">
            <option value="">Seleccione un inquilino</option>
            @foreach (var inquilino in ViewBag.Inquilinos)
            {
                <option value="@inquilino.idInquilino">@inquilino.nombre - @inquilino.apellido</option>
            }
        </select>
        <span asp-validation-for="idInquilino" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="idInmueble" class="form-label"></label>
        <select asp-for="idInmueble" class="form-select">
            <option value="">Seleccione un inmueble</option>
            @foreach (var inmueble in ViewBag.Inmuebles)
            {
                <option value="@inmueble.idInmueble">@inmueble.descripcion - @inmueble.direccion</option>
            }
        </select>
        <span asp-validation-for="idInmueble" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="fechaDesde" class="form-label"></label>
        <input asp-for="fechaDesde" class="form-control" type="date" />
        <span asp-validation-for="fechaDesde" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="fechaHasta" class="form-label"></label>
        <input asp-for="fechaHasta" class="form-control" type="date" />
        <span asp-validation-for="fechaHasta" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="monto" class="form-label"></label>
        <input asp-for="monto" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="monto" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}