@{
    ViewData["Title"] = "Home";
}

<div class="container mt-5 text-center">
    <h2 class="mb-4">Bienvenido a Inmobiliaria</h2>

    <div class="row justify-content-center">

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-person-badge fs-1 mb-3"></i>
                    <h5 class="card-title">Propietarios</h5>
                    <a href="/Propietarios" class="btn btn-primary btn-sm">Abrir</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-people fs-1 mb-3"></i>
                    <h5 class="card-title">Inquilinos</h5>
                    <a href="/Inquilinos" class="btn btn-primary btn-sm">Abrir</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-house-door fs-1 mb-3"></i>
                    <h5 class="card-title">Inmuebles</h5>
                    <a href="/Inmuebles" class="btn btn-primary btn-sm">Abrir</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <i class="bi bi-file-earmark-text fs-1 mb-3"></i>
                    <h5 class="card-title">Contratos</h5>
                    <a href="/Contratos" class="btn btn-primary btn-sm">Abrir</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <a asp-controller="Usuarios" asp-action="Login" class="btn btn-primary">Iniciar Sesión</a>
    </div>
</div>
