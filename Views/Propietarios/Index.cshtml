<br></br> *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h1>
	Propietarios
	<div class="btn-group pull-right">
		<a class="btn btn-primary" asp-action="Create" title="Crear"><i class="fa-solid fa-plus">
            <h4>+</h4>
        </i></a>
	</div>
</h1>

<table border="4" cellpadding="0" class="table table-striped">
    <tr>
        <th>DNI</th>
        <th>Apellido</th>
        <th>Nombre</th>
        <th>Email</th>
        <th>Tel√©fono</th>
        <th>Domicilio</th>
        <th>Acciones</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.dniPropietario</td>
            <td>@p.apellido</td>
            <td>@p.nombre</td>
            <td>@p.email</td>
            <td>@p.telefono</td>
            <td>@p.domicilioPersonal</td>
            <td>
                <div class="d-flex flex-wrap gap-2">
                    <a asp-action="Edit" asp-route-id="@p.idPropietario" class="btn btn-warning btn-sm" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@p.idPropietario" class="btn btn-danger btn-sm" title="Eliminar">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
    }
</table> 
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
