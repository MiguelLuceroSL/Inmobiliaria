@model IEnumerable<Inmobiliaria.Models.Pago>

<h2>Pagos del contrato @ViewBag.ContratoId</h2>
<a asp-action="Create" asp-route-contratoId="@ViewBag.ContratoId" class="btn btn-primary">Nuevo Pago</a>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Fecha</th>
            <th>Detalle</th>
            <th>Importe</th>
            <th>Anulado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.numeroPago</td>
                <td>@p.fechaPago.ToShortDateString()</td>
                <td>@p.detalle</td>
                <td>@p.importe.ToString("C")</td>
                <td>@(p.anulado ? "SÃ­" : "No")</td>
                <td>
                    @if (!p.anulado)
                    {
                        <a asp-action="Anular" asp-route-idPago="@p.idPago" asp-route-contratoId="@p.idContrato" class="btn btn-danger">Anular</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Contratos" asp-action="Index" class="btn btn-secondary">Volver</a>